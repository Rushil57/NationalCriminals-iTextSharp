@model NationalCriminals.Models.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8 no-js"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9 no-js"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta http-equiv="Content-type" content="text/html; charset=utf-8">
    <meta content="" name="description" />
    <meta content="" name="author" />

    <style type="text/css">
        .fa-2x-custom
        {
            font-size: 1.5em !important;
        }
    </style>

    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&subset=all" rel="stylesheet" type="text/css" />
    <link href="~/Content/global/plugins/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/global/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/global/plugins/uniform/css/uniform.default.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/admin/pages/css/login3.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/global/css/components.css" id="style_components" rel="stylesheet" type="text/css" />

    <link rel="shortcut icon" href="~/favicon.ico">
    <style>
        .alert ul
        {
            list-style: none;
        }
        .field-validation-error
        {
            color: #a94442;
        }
    </style>


</head>
<body class="login">

    <div class="logo">
        <a href="index.html"></a>
    </div>

    <div class="menu-toggler sidebar-toggler">
    </div>

    <div class="content">

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "login-form", id = "frmLogin" }))
        {
            <h3 class="form-title">Login to your account</h3>
            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
            
            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control placeholder-no-fix", autofocus = "autofocus" })
                </div>
                @Html.ValidationMessageFor(model => model.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "control-label" })
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    @Html.TextBoxFor(model => model.Password, new { @class = "form-control placeholder-no-fix", autocomplete = "off", @type = "password" })
                </div>
                @Html.ValidationMessageFor(model => model.Password)
            </div>
            <div class="">
                <label>&nbsp;</label>
                <button type="submit" class="btn green-haze pull-right">
                    Login <i class="m-icon-swapright m-icon-white"></i>
                </button>
            </div>      
            <div class="create-account">
                <p>
                    Don't have an account yet ?&nbsp; <a href="@Url.Action("Register", "Account")">Create an account </a>
                </p>
            </div>
        }

    </div>
    <script src="~/Scripts/jquery-1.11.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/global/plugins/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>

    <script src="~/Scripts/Login.js"></script>
    <script src="~/Content/global/scripts/metronic.js" type="text/javascript"></script>

    <script>
        jQuery(document).ready(function () {
            Metronic.init();
        });
    </script>

</body>
</html>
